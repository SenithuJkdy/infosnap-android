<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reporternewsapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Reporternewsapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Reporternewsapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Reporternewsapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Normal App Theme -->
                <item name="android:windowBackground">@color/colorPrimary</item>
<!--                <item name="android:windowBackground">@color/teal_200</item>-->

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
<!--        <item name="android:windowBackground">@color/teal_200</item>-->
        <!-- Animated icon (Use vector drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Theme to apply after the splash screen disappears -->
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>


</resources>